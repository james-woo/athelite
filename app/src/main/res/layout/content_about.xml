<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="64dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.athelite.Activity.AboutActivity"
        tools:showIn="@layout/activity_about"
        android:nestedScrollingEnabled="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/about_title_string"
            android:id="@+id/about_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about_what_is_athelite_string"
            android:id="@+id/about_what_is_athelite"
            android:layout_below="@+id/about_title"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about_license_string"
            android:id="@+id/about_licenses"
            android:layout_below="@+id/about_licenses_title"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about_libraries_string"
            android:id="@+id/about_libraries"
            android:layout_below="@+id/about_licenses"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/about_license_title_string"
            android:id="@+id/about_licenses_title"
            android:layout_below="@+id/about_what_is_athelite"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

    </RelativeLayout>
</ScrollView>
